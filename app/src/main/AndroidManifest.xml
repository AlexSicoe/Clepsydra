        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ro.alexsicoe.clepsydra.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ro.alexsicoe.clepsydra.activity.ProjectListActivity" />
        <activity android:name="ro.alexsicoe.clepsydra.activity.SettingsActivity" />
        <activity android:name="ro.alexsicoe.clepsydra.activity.AboutActivity" />
        <activity android:name="ro.alexsicoe.clepsydra.activity.AddProjectActivity"></activity>
    </application>

</manifest>